---
import BaseLayout from '../layouts/BaseLayout.astro';
import Img from '../components/embeds/Img.astro';
import { Schema } from 'astro-seo-schema';
import { createPersonSchema, createOrganizationSchema } from '../utils/schema';
import { getAvailableAvatars } from '../utils/avatars';

const siteUrl = Astro.site?.toString() || 'https://www.russ.cloud/';
const personSchema = createPersonSchema(siteUrl);
const organizationSchema = createOrganizationSchema(siteUrl);

// Select a random SVG avatar from the available avatars
const availableAvatars = getAvailableAvatars().filter(avatar => avatar.endsWith('.svg'));
const randomAvatar = availableAvatars[Math.floor(Math.random() * availableAvatars.length)];
const avatarPath = `/images/avatars/${randomAvatar}`;
---

