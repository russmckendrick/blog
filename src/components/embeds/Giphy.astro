---
interface Props {
	/** Giphy ID, e.g. "3o7btPCcdNniyf0ArS" */
	id: string;
	/** Aspect ratio as percentage (default: 74.023%) */
	paddingBottom?: string;
}

const { id, paddingBottom = '74.023%' } = Astro.props;
---

<div class="giphy-container" style={`padding-bottom: ${paddingBottom};`}>
	<iframe
		src={`https://giphy.com/embed/${id}`}
		class="giphy-embed"
		allowfullscreen
		scrolling="no"
		allow="encrypted-media;"
	>
	</iframe>
</div>

<style>
	.giphy-container {
		position: relative;
		width: 100%;
		height: 0;
		margin: 1.5rem auto;
		border-radius: 0.75rem;
		overflow: hidden;
	}

	.giphy-embed {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}
</style>