---
import { LinkPreview as LinkPreviewEmbed } from '@astro-community/astro-embed-link-preview';

interface Props {
  id: string;
  hideMedia?: boolean;
}

const { id, hideMedia } = Astro.props;
---

<div class="my-6 rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800">
  <LinkPreviewEmbed id={id} hideMedia={hideMedia} />
</div>

<style>
  div :global(a) {
    width: 100% !important;
    max-width: 100% !important;
  }

  div :global(.link-preview) {
    width: 100% !important;
    max-width: 100% !important;
  }
</style>