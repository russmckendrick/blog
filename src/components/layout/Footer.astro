---
import { SOCIAL_LINKS, AUTHOR_NAME } from '../../consts';
import Icon from '../ui/Icon.astro';

const today = new Date();
---

<footer class="bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-gray-800 mt-20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="flex flex-col items-center space-y-6">
			<!-- Social Links -->
			<div class="flex flex-wrap justify-center gap-4">
				{SOCIAL_LINKS.map(social => (
					<a
						href={social.url}
						target="_blank"
						rel="noopener noreferrer"
						class="p-3 !text-gray-600 dark:!text-gray-400 visited:!text-gray-600 dark:visited:!text-gray-400 hover:!text-gray-900 dark:hover:!text-gray-100 hover:bg-gray-200/50 dark:hover:bg-gray-800/50 rounded-lg transition-all duration-200 hover:scale-110 no-underline"
						aria-label={`Visit ${social.name}`}
						title={social.name}
					>
						<Icon name={social.name} size={24} />
					</a>
				))}
			</div>

			<!-- Copyright -->
			<div class="text-center text-sm text-gray-600 dark:text-gray-400">
				<p>&copy; {today.getFullYear()} {AUTHOR_NAME}. All rights reserved.</p>
			</div>
		</div>
	</div>
</footer>
