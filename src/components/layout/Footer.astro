---
import { NAVIGATION_ITEMS, AUTHOR_NAME } from '../../consts';
import Icon from '../ui/Icon.astro';

const today = new Date();
---

<footer class="bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-gray-800 mt-20" transition:name="site-footer">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="flex flex-col items-center">
			<div class="text-center text-sm text-gray-600 dark:text-gray-400">
				<p class="flex flex-wrap items-center justify-center gap-x-2 gap-y-1">
					<span>&copy; {today.getFullYear()} {AUTHOR_NAME}. All rights reserved.</span>
					<span class="hidden sm:inline">|</span>
					<span class="flex flex-wrap items-center justify-center gap-x-1 gap-y-1">
						{NAVIGATION_ITEMS.map((item) => (
							<a
								href={item.url}
								class="flex items-center justify-center p-2 !text-gray-700 dark:!text-gray-300 hover:!text-gray-900 dark:hover:!text-gray-100 hover:bg-gray-200/50 dark:hover:bg-gray-800/50 rounded-md transition-colors"
								target={item.external ? '_blank' : undefined}
								rel={item.external ? 'noopener noreferrer' : undefined}
								title={item.name}
								aria-label={item.name}
							>
								<Icon name={item.icon} size={18} />
							</a>
						))}
					</span>
				</p>
			</div>
		</div>
	</div>
</footer>
