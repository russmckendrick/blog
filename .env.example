# Last.fm API Configuration
LASTFM_USER=your-lastfm-username
LASTFM_API_KEY=your-lastfm-api-key

# Collection URL (russ.fm)
COLLECTION_URL=https://www.russ.fm

# AI Provider - Use either OpenAI or Anthropic
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5-mini
OPENAI_TEMPERATURE=1

# OR Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.7

# Optional: Web Search Tools (choose one)
# Perplexity AI - Search-augmented LLM (best quality, recommended)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Exa AI - Semantic search with music journalism focus
EXA_API_KEY=your-exa-api-key

# Tavily API - Alternative search provider
TAVILY_API_KEY=your-tavily-api-key

# Optional: Search cache control (enabled by default)
ENABLE_SEARCH_CACHE=true

# Optional: FAL API Key for collage generation
FAL_KEY=your-falai-api-key

# Medium Cross-Publishing
MEDIUM_TOKEN=your-medium-integration-token

# GitHub API (for Medium --gists flag)
GITHUB_TOKEN=your-github-personal-access-token